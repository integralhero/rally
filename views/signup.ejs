<% layout('notloggedlayout') -%>
<div class="container">
	<div class="masked">
		<h1 class="titletext text-center">Rally </i></h1>
	</div>
	<div class="row-fluid">
		<div class="col-md-12" id="signup">
			<div id="hiddenNotice"></div>
			<% if (message.length > 0) { %>
			<p><div class='alert alert-danger'> <%= message %></div></p>
			<% } %>
			<form role="form" id="new-user-form">
				<div class="form-group">
					<!-- make new username/password -->
					<input type="text" class="form-control" name="username" id="nameField" placeholder="Username">
				</div>

				<div class="form-group">
					<!-- make new username/password -->
					<input type="email" class="form-control" name="email" id="emailField" placeholder="Email">
				</div>

				<div class="form-group">
					<input type="password" class="form-control" name="password" id="passwordField" placeholder = "Password">
				</div>
				<p>Note: for security purposes you will be asked to log in with your new account after this</p>
				<button type="button" class="btn btn-block btn-primary" id="addUserButton">Sign Up for Rally</button>

			</form>
		</div> <!--./col-->

	</div> <!--./row -->
</div>