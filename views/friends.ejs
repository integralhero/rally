<% layout('layout') -%>
	<% if (message.length > 0) { %>
	<p><div class='alert alert-danger'> <%= message%></div></p>
	<% } %>
	<% if (success.length > 0) { %>
	<p><div class='alert alert-success'> <%= success%></div></p>
	<% } %>
	<div class="friendsBackgroundColor" style="padding-top: 20px; margin-top: -10px">
	<h1 class="padding" style="color:white">Your Friends! <button class="btn btn-success btn-lg" style="background-color:white; color: #e74c3c; margin-bottom: 10px" data-toggle="modal" data-target="#friendModal"> Friend  <i class="fa fa-plus fa-1x" ></i></h1>
				</button></div>

				<!-- Modal -->
				<div class="modal fade" id="friendModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				  <div class="modal-dialog">
				    <div class="modal-content">
				      <div class="modal-header">
				        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				        <h4 class="modal-title" id="myModalLabel">Add Friend</h4>
				      </div>
				      <div class="modal-body">
				      	What's your friend's name?<BR>
				        <form id="addFriendForm">
				        	<input type="text" id="friendName" placeholder="Name"  class="form-control">
				        	<div class="modal-footer">
				        	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				        	<button type="button" id="addFriendButton" class="btn btn-primary">Add Friend</button>
				      </div>
				        </form>
				      </div>	      
				    </div>
				  </div>
				</div><!-- End Modal -->
	<div class="activity" style="margin-top: -20px">
	<% for (var i = 0; i<userFriends.length; i++) { %>
			<h3><img class="img-circle" width="60px" height="60px" src="<%= userFriends[i].imageURL %>"><a href="/user/<%= userFriends[i]._id%>">     <%=userFriends[i].username%></a> </h3>
	<% } %>
</div>
