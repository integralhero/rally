<% layout('layout') -%>
<class="row-fluid">
<a href="/friends" class="padding">
<button class="btn btn-primary btn-lg friendsBackgroundColor" data-toggle="modal" data-target="#myModal">
				  <i class="fa fa-arrow-left fa-1x" ></i> 
</button>
</a>
		<BR>
	<div class="topSpecificAccount">
	<h1 class="padding" style="color: #e74c3c"><img width="100px" height="100px" class="img-circle" src="<%= friend.imageURL %>"> <%=friend.username%></h1></div>
		<% 
		var isFriend = false;
		for(var i = 0; i < user.friends.length; i++) { 
			if(user.friends[i].toString() == friend._id.toString()) {
				isFriend = true;
			}
		} 
		%>
		<% if(isFriend) { %>
			<h2 class="padding"><small>Check out what your friend is up to:</h2></small>
						<div class="activity">
			<% for(var i = 0; i < friendRallies.length; i++) { %>
				<a href="/activity/<%= friendRallies[i]._id%>"><h3 class="activityColor"><%= friendRallies[i].title%></a></h3>
			<% } %>
			</div>
			<form id="deleteFriendForm" method="post" action="/user/delete">
				<input type="hidden" id="yourID" name="yourID" value="<%= user._id%>">
                <input type="hidden" id="friendID" name="friendID" value="<%= friend._id%>">
                <button class="btn btn-danger btn-lg" style="float: right" id="deleteFriend">
                  Un-friend  </i>
                </button>
             </form>
		<% } else { %>
			Looks like you haven't friended <%=friend.username%>. Would you like to:<BR>
			<form id="addFriendForm">
	        	<input type="hidden" id="friendName" value="<%=friend.username%>">
	        	<button type="button" id="addFriendButton" class="btn btn-primary>Add Friend</button>
			</form>
		<% } %>
	
</div>
